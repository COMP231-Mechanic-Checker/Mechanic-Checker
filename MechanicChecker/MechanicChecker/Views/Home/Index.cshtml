<div class="wrapper">
    @using (Html.BeginForm("SearchLocalSellersProducts", "Search", FormMethod.Get))
    {<p style="font-weight: bold;">NOTICE: Alibaba Search is disabled as the API used to get Alibaba search results has very high latency (e.g. over 40 seconds)</p>
        <p style="font-weight: bold;">NOTICE: Test Demo Account Credentials is provided for users upon going to the sign in page so that no sign up is required to test Mechanic Checker's Seller Account features.</p>
        <div class="search_box">
            <div class="input_postalcode">
                <input type="text" class="input" id="homeAddress" name="homeAddress" placeholder="Postal Code">
            </div>
            <div class="dropdown">
                <div class="default_option" style="color: white;">All</div>
                <ul>
                    <li data-value="0">All</li>
                    <li data-value="1">Local Sellers</li>
                    <li data-value="2">Ebay</li>
                    <li data-value="3">Amazon</li>
                    <li data-value="4">Alibaba</li>
                </ul>
                <input type="hidden" id="vendorFilter" name="vendorFilter" value="0">

                @*<select name="vendorFilter">
                        <option value="0">All</option>
                        <option value="1">Local Sellers</option>
                        <option value="2">Ebay</option>
                        <option value="3">Amazon</option>
                        <option value="3">Alibaba</option>
                    </select>*@
            </div>
            <div class="search_field">
                <input type="text" class="input" id="query" name="query" placeholder="Search" required>
                @*@Html.TextBox("query")*@
                <button><i class="fas fa-search"></i></button>
            </div>
        </div>
        <!--<div class="search_field">
             <input type="text" class="input" id="query" name="query" placeholder="Search">-->
        @*@Html.TextBox("query")*@
        <!--<button><i class="fas fa-search"></i></button>
        </div>-->
    }


</div>


@section Scripts
{
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
        $(document).ready(function () {
            var vendorFilter = $("#vendorFilter");

            $(".default_option").click(function () {
                $(".dropdown ul").addClass("active");
            });
            $(".dropdown ul li").click(function () {
                var text = $(this).text();
                var vendorOption = $(this).data("value");

                $(".default_option").text(text);
                $(".dropdown ul").removeClass("active");

                vendorFilter.val(vendorOption);
            });
        });
    </script>

}

