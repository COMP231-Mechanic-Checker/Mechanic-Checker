@model MechanicChecker.Models.LocalProduct

@{
    ViewData["Title"] = "SellerDeletePage";
}

<link href="~/css/StyleSeachViewDetails.css" rel="stylesheet" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">


<div class="wrapper w3-card w3-margin">

    <div class="w3-content">
        <br />
        <br />
        <h3>Are you sure you want to delete this part or service?</h3>
         
        <table>
            <tr>
                <td>
                    <img src="@Html.DisplayFor(model => model.ImageUrl)" style="border:solid; height:300px"/>                     
                    <br />
                    <br />
                </td>
                <td>&nbsp;</td>
                <td style="vertical-align: top; text-align:left;">                   

                    <span><br /><b>Title:</b> @Html.DisplayFor(model => model.Title)</span>

         
                    <span><br /><b>Price:</b> @Html.DisplayFor(model => model.Price)</span>
                    @*}*@
                    <br />
         
                    <b>Description:</b>              
                    <span> @Html.DisplayFor(model => model.Description)</span>
                    @*}*@

                    <span><br /><b>ImageUrl:</b>  @Html.DisplayFor(model => model.ImageUrl) </span>

        
                    <span><br /><b>Category:</b>@Html.DisplayFor(model => model.Category) </span>
                    @*}*@

                    <span><br /><b>ProductUrl:</b>  @Html.DisplayFor(model => model.ProductUrl) </span>

                    <span><br /><b>IsQuote:</b>  @Html.DisplayFor(model => model.IsQuote) </span>
                    <br />
                    <br />
                <form asp-action="SellerDeletePage">
                    @Html.ActionLink("Delete", "Delete", new { imageUrl = Model.ImageUrl, sellerID = Model.sellerId, productId = Model.LocalProductId /* id=item.PrimaryKey */ }, new { @class = "btn btn-danger " })|
                    <input onclick="history.back()" value="Cancel" class="btn btn-default" />
                </form>
                </td>
            </tr>
        </table>
    </div>
</div>








































