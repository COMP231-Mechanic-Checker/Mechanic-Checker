@{
    ViewData["Title"] = "Home Page";
}




<link href="~/css/stylesearchbutton.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />


<body>
    <header>
        <style>
            body {
                background-image: url(../images/Mechanicbackgorund.jpg);
            }
        </style>

    </header>


    <br />
    <br />
    <br />

    <div class="text-center my-5">
        <img src="~/images/MechanicCheckerLogoSmaller.png" class="img-fluid ml-5 mr-5" alt="Mechanic Checker Logo.">
    </div>

    <div class="wrapper">
        <div class="search_box">
            <div class="dropdown">
                <div class="default_option">All</div>
                <ul>
                    <li>All</li>
                    <li>Local Sellers</li>
                    <li>eBay</li>
                    <li>Alibaba and Amazon</li>
                </ul>
            </div>
            <div class="search_field">
                <input type="text" class="input" placeholder="Search">
                <i class="fas fa-search"></i>
            </div>
        </div>
    </div>
</body>


@section Scripts
{
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".default_option").click(function () {
                $(".dropdown ul").addClass("active");
            });

            $(".dropdown ul li").click(function () {
                var text = $(this).text();
                $(".default_option").text(text);
                $(".dropdown ul").removeClass("active");
            });
        });
    </script>

}
