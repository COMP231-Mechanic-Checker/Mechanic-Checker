@model IEnumerable<MechanicChecker.Models.LocalProduct>
@* @model Product*@@*TODO: Get the model when created*@

@{ @*TODO: update the title page*@ ViewData["Title"] = "SearchResultsList";
            Layout = "_Layout"; }


<h2>@ViewData["Title"]</h2>




<table class="table table-sm table-striped table-bordered">

    <tbody>

        <!--shows each car part/service from the product list model (recived from the controller via model) in the table below-->
        @foreach (var r in Model)
        {
<tr>
    <td>
        <div class="card flex-row flex-wrap ">

            <div class="card-header border-0 left col-sm-4 d-flex">
                @r.ImageUrl
                <img class="card-img-left border-rounded center-block my-auto" src="https://images.vexels.com/media/users/3/155414/isolated/lists/6c5e852026e7fd11f79cf45a65299016-suv-car-side-view-silhouette.png" width="200" height="200" alt="Name">
            </div>
            <div class="card-block px-2 flex-row flex-wrap col-sm-8">

                <div class="card-header text-muted align-top">
                    <h3 class="card-title">
                        <input type="checkbox" id="" name="" value="">@r.LocalProductId &nbsp;&nbsp;@r.Title
                    </h3>
                </div>

                <div class="align-bottom">
                    <div class="col-sm-4 align-top">
                        <p class="card-text h4">$ @r.Price</p> @*can be used @r.Price.ToString("c")- showing error as Price is in string*@
                        @*TODO: *@
                        <p class="card-text">@r.Description</p>
                        <p class="card-text">Category:&nbsp;&nbsp;@r.Category</p>
                        <p class="card-text">
                            @*TODO: add action and controller to switch to product details view*@
                            @Html.ActionLink("Click to view details", "#", new {  /* id=item.PrimaryKey */ }, new { @class = "btn btn-primary " })
                        </p>
                    </div>

                    @*//add company logo*@
                    <div class="float-right col-sm-8 align-top d-flex" style="width: 18rem; height: 18rem">
                        @*TODO: add action and controller/ url for seller website if provided*@
                        <a href="@r.ProductUrl" title="click to visit the website" class="btn card-body center-block d-flex">
                            @*<a href="@Url.Action("Action", "Controller")" title="click to visit the website" class="btn card-body center-block d-flex">*@
                            @*TODO: add seller logo if provided*@
                            <img class="card-img-top my-auto" style="width: 12rem;" src="https://edge.alluremedia.com.au/m/l/2017/04/eBay-Logo.png" alt="Card image cap">
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </td>

</tr>}

    </tbody>
</table>

