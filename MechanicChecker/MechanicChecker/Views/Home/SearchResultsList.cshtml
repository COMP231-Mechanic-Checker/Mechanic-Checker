}

<h2>SearchResultsList</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table table-sm table-striped table-bordered">

    <tbody>

        <!--shows each positive answer in the table below-->
        @foreach (var r in Model.Product)//add product class
        {
        <tr>

            <div class="card flex-row flex-wrap ">

                <div class="card-header border-0 left col-sm-4">
                    <img class="card-img-left border-rounded" src="https://images.vexels.com/media/users/3/155414/isolated/lists/6c5e852026e7fd11f79cf45a65299016-suv-car-side-view-silhouette.png" width="300px" alt="@r.Name">
                </div>
                <div class="card-block px-2 flex-row flex-wrap col-sm-8">
