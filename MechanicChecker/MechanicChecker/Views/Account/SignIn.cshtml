@model Seller

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<link href="~/css/style.css" rel="stylesheet" />
<br />
<br />
<br />

<div class="signinform">
    <div>
       <img src="~/images/MechanicCheckerLogoSmaller.png" alt="Mechanic Checker App Logo" height="55" width="130" class="center-block">
    </div>
    <h2>Welcome</h2>
    <h3>Seller's Sign In here</h3>
    <div class="text-danger" asp-validation-summary="All"></div>
    <form asp-action="SignIn" asp-controller="Account" method="post">
        <input type="hidden" />
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <div><span asp-validation-for="UserName" class="text-danger"></span></div>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PasswordHash">Password</label>
            <div><span asp-validation-for="PasswordHash" class="text-danger"></span></div>
            <input asp-for="PasswordHash" class="form-control" />
        </div>
        <button class="btn btn-primary" type="submit">Sign In</button>
    </form>
    <h5>Reser your password? </h5>
</div>

