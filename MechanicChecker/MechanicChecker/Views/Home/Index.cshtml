@model IEnumerable<LocalProduct>
@{
    ViewData["Title"] = "Home Page";
}

<div id="mainDiv" style="height: 200px">
    <div id="filter" style="display: inline-block; height: 200px;float:left; width: 20%; ">
        <h3>Filter Options</h3>
        <input type="checkbox" onchange="filterRecords(this)" runat ="server" onclick="filterRecords(this)" id="title" name="title" value="Title">
        <label for="title">Title</label><br>
        <input type="checkbox" id="price" onclick="filterRecords(this)" name="price" value="Price">
        <label for="price">Price</label><br>
        <input type="checkbox" id="categories" onclick="filterRecords(this)" name="categories" value="Categories">
        <label for="categories">Categories</label><br>
        <input type="checkbox" id="sellers" name="sellers" value="Sellers">
        <label for="sellers">Sellers</label><br>
        <input type="checkbox" id="quotes" name="quotes" value="Quotes">
        <label for="quotes">Quotes</label><br>
    </div>
    <div id="categories" style="display: inline-block; height: 200px;float:left; width: 20%; ">
        <h3>Categories</h3>
        <select name="categories" id="ddl_categories">
            <option value="Select">--Select--</option>
            <option value="Service">Service</option>
            <option value="Service">Service</option>
            <option value="Item">Item</option>

        </select>
    </div>
    <div id="sellers" style="display: inline-block;float:left;  width: 20%;">
        <h3>Sellers</h3>
        <select name="seller" id="ddl_sellers">
            <option value="Select">--Select--</option>
            <option value="Local Product">Local Product</option>
            <option value="Aamzon">Aamzon</option>
            <option value="Alibaba">Alibaba</option>
            <option value="Ebay">Ebay</option>
        </select>
    </div>
    <div id="price" style="display: inline-block;float:left;  width: 20%;">
        <h3>Price</h3>
        <h7> Set a custom price range</h7>
        <input class="bottomborder" placeholder="Min" type="text" />
        <input class="bottomborder" placeholder="Max" type="text" /><br /><br />
        <div>
            <button style="border-radius: 12px;">Clear</button>
            <button style="border-radius: 12px;">Apply</button>
        </div>
    </div>
    <div id="sortby" style="display: inline-block;float:left;  width: 20%;">
        <h3>Sort By</h3>
        <select name="sortBy" id="ddl_sortBy">
            <option value="Select">--Select--</option>
            <option value="Recommended">Recommended</option>
            <option value="BestSelling">Best Selling</option>
            <optgroup label="Title">
                <option value="asc">Title A-Z</option>
                <option value="desc">Title Z-A</option>
            </optgroup>
            <optgroup label="Sort By Price">
                <option value="priceasc">Lowest to Highest</option>
                <option value="pricedesc">Highest to Lowest</option>
            </optgroup>
        </select>
    </div>

    
</div>
<div id="ProductList">
    @foreach (var item in Model)
    {
        <div style="margin: 10px; border:1px solid black;">
            <img src=@item.ImageUrl />
        </div>
    }
</div>
