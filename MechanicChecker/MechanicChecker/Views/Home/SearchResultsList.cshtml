                            <input type="checkbox" id="" name="" value=""> &nbsp;&nbsp;Name
                        </h4>
                    </div>
                    <p class="card-text">$ 100</p>
                    <p class="card-text">Some demo description</p>
                    <p class="card-text">
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-primary " }) |
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-warning " }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-danger " })
                    </p>
                </div>

            </div>
        </tr>
        }

